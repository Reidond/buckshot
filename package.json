{
  "name": "buckshot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run --parallel dev:next dev:cf",
    "dev:next": "next dev",
    "dev:cf": "wrangler dev",
    "build": "next build",
    "deploy": "opennextjs-cloudflare build && wrangler deploy",
    "check": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply yt-shorts-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply yt-shorts-db",
    "db:seed:local": "bun run scripts/seed.ts",
    "db:setup:local": "bun run db:migrate:local && bun run db:seed:local",
    "db:studio": "drizzle-kit studio",
    "create-admin": "bun run scripts/create-admin.ts",
    "pool-add": "bun run scripts/pool-add.ts",
    "cf:types": "wrangler types --env-interface CloudflareEnv --include-runtime false",
    "test": "bun test"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@opennextjs/cloudflare": "^1.0.0",
    "@sentry/cloudflare": "^8.0.0",
    "@tailwindcss/postcss": "^4.2.0",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.38.3",
    "nanoid": "^5.0.9",
    "next": "15.1.7",
    "next-auth": "^5.0.0-beta.25",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.1",
    "react-grab": "^0.1.16",
    "typescript": "^5.7.3",
    "wrangler": "^4.67.0"
  }
}
